        <version>2.1.1.RELEASE</version>
    </parent>
    
    <dependencies>
        <!-- springmvc and thymeleaf -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
